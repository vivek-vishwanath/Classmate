<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FBLA">
        <activity
            android:name=".activities.NavigationDrawerActivity"
            android:exported="false"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.FBLA.NoActionBar" />
        <activity
            android:name=".ui.dashboard.NewForumActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LunchMenuActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.messages.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ui.messages.FindContactActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NavigationActivity"
            android:exported="false"
            android:label="@string/app_name" />
    </application>

</manifest>