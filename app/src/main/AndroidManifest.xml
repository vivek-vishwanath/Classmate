<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FBLA">
        <activity
            android:name=".fragments.profile.EmailActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.messages.menu.AboutEventActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.messages.menu.NewEventActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.messages.menu.EventsActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.messages.main.NewForumActivity"
            android:exported="false" />
        <activity
            android:name=".login.LunchMenuActivity"
            android:exported="false" />
        <activity
            android:name=".login.AddCoursesActivity"
            android:exported="false"/>
        <activity
            android:name=".fragments.messages.chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.messages.main.FindForumActivity"
            android:exported="false" />
        <activity
            android:name=".login.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>